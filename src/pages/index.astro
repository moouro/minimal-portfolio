---
import Hero from '../components/Hero.astro'
import Title from '../components/Title.astro'
import Project from '../components/Project.astro'
import Layout from '../layouts/Layout.astro'
import Footer from '../components/Footer.astro'
import Newsletter from '../components/Newsletter.astro'
import CThoughts from '../components/CThoughts.astro'
---

<Layout title="Welcome to Jhon Smith">
	<div class="grid h-svh grid-rows-[auto_1fr_auto] gap-4">
		<header>
			<Hero />
		</header>

		<main>
			<section class="uk-container uk-container-xsmall mt-10">
				<div class="mb-6 flex items-baseline justify-between">
					<Title title="Projects" />
					<a href="/projects" class="uk-link-text font-mono">see all</a>
				</div>

				<div class="grid gap-4">
					<Project
						title="minilio"
						content="A minimal portfolio template built on Framer"
						year="2024"
						link="#"
					/>

					<Project
						title="Staredown"
						content="An online game to test you colour vision"
						year="2024"
						link="#"
					/>

					<Project
						title="88pixel"
						content="A collection of cross-platform website templates."
						year="2024"
						link="#"
					/>
				</div>
			</section>

			<section class="uk-container uk-container-xsmall mt-10">
				<div class="mb-6 flex items-baseline justify-between">
					<Title title="Thoughts" />
					<a href="/thoughts" class="uk-link-text font-mono">see all</a>
				</div>
				<CThoughts />
			</section>

			<section class="uk-container uk-container-xsmall mt-10">
				<div class="mb-6">
					<Title title="Newsletter" />
				</div>

				<Newsletter />
			</section>
		</main>
		<footer>
			<section class="uk-container uk-container-xsmall mt-10">
				<Footer />
			</section>
		</footer>
	</div>
</Layout>
